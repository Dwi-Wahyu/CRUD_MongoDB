<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <style>

      .input-icons i {
        position: absolute;
      }
      .input-icons {
        width: 100%;
        margin-bottom: 10px;
      }
      .icon {
        padding: 10px;
        min-width: 40px;
        margin-top: 5px;
        margin-left: 9px;
        cursor: pointer;
      }
      .input-field {
        width: 100%;
        padding: 10px;
        text-align: center;
      }
      #list {
        display: flex;
        flex-direction: row;
      }

    </style>
    <title>Edit Data</title>
  </head>
  <body>

    <nav class="navbar navbar-dark bg-dark navigationbar">
      <div class="container">
        <a class="navbar-brand" href="/update/<%= user._id %>">Update Page</a>
        <div class=" navbar" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="list">
            <li class="nav-item ms-4">
              <a class="nav-link" aria-current="page" href="/home">Back Home</a>
            </li>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="mt-4 mb-4 text-center"></h1>
      <form action="/api/update/<%= user.email %> " id="form" method="post">
        <h3 class="text-center">User <%= user.nama %></h3>
        
        <div class="mb-3">
          <label for="nama">Nama</label>
          <input
            type="text"
            name="nama"
            value="<%= user.nama %>"
            id="nama"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            value="<%= user.email %>"
            id="email"
            class="form-control"
            required
          />
        </div>
        
        <label for="password">Password</label>
        <div class="mb-3 input-icons">
          <i
            class="far fa-eye icon"
            id="togglePassword"
          ></i>
          <input
            type="password"
            name="password"
            value="<%= user.password %>"
            id="password"
            class="form-control input-field"
            required
          />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary ">Edit Data</button>
        </div>
      </form>
    </div>
    <script>
      const togglePassword = document.querySelector("#togglePassword");
      const password = document.querySelector("#password");

      togglePassword.addEventListener("click", function (e) {
        const type =
          password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);
        this.classList.toggle("fa-eye-slash");
      });
    </script>
  </body>
</html>
